<!DOCTYPE html>
<html lang="en">
    <%-include('../partials/head')%>
<body>
    <%-include('../partials/header')%>
    <main class="body-main">
        <div>
        <div class="main-container">
            <div class="second-container">
                <article class="article-selected">
                    <div class="article-image" >
                        <img src="/images/products/<%= producto.image %>" alt="Imagen">
                       
                    </div>
                    <div class="article-description">
                        <p class="description"><%= producto.description %> (Or√≠gen <%= producto.country %>)</p>
                        <p class="price">$<%= producto.price %></p>
                        <p class="add-cart"><a href="#">Agregar al carrito</a></p>
                       
                    </div>
                        <% let admin = 'totocefe@hotmail.com'; if (locals.user && user.email == admin) { %>
                        <a href="/admin/editarProd/<%= producto.id %>">
                            <button type="submit" style="background-color: rgb(99, 153, 99); color: white; ">Editar Producto</button>
                        </a>
                        <a href="/admin/crearProd">
                            <button type="submit" style="background-color: rgb(99, 153, 99); color: white; ">Crear Producto</button>
                         </a>
                         
                    
                    
                        <form action="/admin/<%= producto.id %>?_method=DELETE" method="post">
                           <button type="submit" style="background-color: rgb(99, 153, 99); color: white; ">Eliminar Producto</button>
                        </form>
                        <% } %>
                    
                </article>
            </div>
            
            
        </div>
        </div>
    </main>
    <%-include('../partials/footer')%>
</body>
</html>