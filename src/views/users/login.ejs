<!DOCTYPE html>
<html lang="en">
    <%-include('../partials/head')%>
<body>
    <%-include('../partials/header')%>
    <main class="body-main">
        <section class="information">
            <div class="main-information">
                <div style="color: red" class="errores">
                    <ul>

                    </ul>
                </div>
                
                <form action="/user/login" method="post">
                   <h3 class="h3-login">
                       Ingresá con tu cuenta
                   </h3>
                   
                    <div>
                    <label for="email">Email:</label>
                    <input type="email" name="email" id="email" value="<%= locals.old ? old.email : null %>">
                    <% if (locals.errors && errors.email) { %>
                        <p  style="color:red">
                            <%= errors.email.msg %>
                        </p>
                        <% } %>
                        <p style="color: red" id="errorEmail">

                        </p>
                    
                    </div>
                    <div>
                        <label for="password">Contraseña</label>
                        <input type="text" name="password" id="password">
                        <% if (locals.errors && errors.password) { %>
                            <p  style="color:red">
                                <%= errors.password.msg %>
                            </p>
                            <% } %>
                            <p style="color: red" id="errorPassword">
                            
                            </p>
                        
                    </div>
                    <div class="forgot">
                        <label for="recordar">Recordar mi usuario</label>
                        <input type="checkbox" name="recordar" >
                    </div>
                   
                   
                    
                   
                   
                    <div>
                        <button type="submit" class="buttons" style="background-color: rgb(99, 153, 99); color: white; ">Enviar</button>

                    </div>
                    

                 
                </form>
                </div>
            </div>
        </section>
    </main>
    <%-include('../partials/footer')%>
    <script src="/js/validLogin.js"></script>
</body>
</html>
    