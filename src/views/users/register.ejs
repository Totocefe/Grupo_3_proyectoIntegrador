<!DOCTYPE html>
<html lang="en">
    <%-include('../partials/head')%>
<body>
    <%-include('../partials/header')%>

        <main class="body-main">
            <section class="information">
                <div class="main-information">
                    <div style="color: red" class="errores">
                        <ul>
    
                        </ul>
                    </div>
                    
                    
                    <form action="/user/register" method="post" id="form_register" enctype="multipart/form-data">
                       <h3 class="h3-login">
                           Registrate
                       </h3>
                       <div>
                        <label for="first_name">Nombre:</label>
                        <input type="text" name="first_name" id= "first_name" value="<%= locals.old ? old.first_name : null %>">
                        <% if (locals.errors && errors.first_name) { %>
                        <p style="color:red">
                            <%= errors.first_name.msg %>
                        </p>
                        <% } %>
                        </div>
                        <div>
                            <label for="last_name">Apellido:</label>
                            <input type="text" name="last_name" id="last_name" value="<%= locals.old ? old.last_name : null %>">
                            <% if (locals.errors && errors.last_name) { %>
                                <p style="color:red">
                                    <%= errors.last_name.msg %>
                                </p>
                                <% } %>
                            </div>
                       
                        <div>
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="email" value="<%= locals.old ? old.email : null %>">
                        <% if (locals.errors && errors.email) { %>
                            <p style="color:red">
                                <%= errors.email.msg %>
                            </p>
                            <% } %>
                        </div>
                        <div>
                            <label for="password">Contrase√±a</label>
                            <input type="text" name="password" id="password" value="<%= locals.old ? old.password : null %>">
                            <% if (locals.errors && errors.password) { %>
                                <p style="color:red">
                                    <%= errors.password.msg %>
                                </p>
                                <% } %>
                        </div>
                        <div>
                            <label for="age">Edad</label>
                            <input type="text" name="age" >
                        </div>
                        <div>
                            <label for="country_id">Nacionalidad</label>
                            <input type="text" name="country_id" >
                        </div>
                        
                        <div> 
                            <label for="userImage">Foto de perfil</label>  
                              <input type="file" name="userImage" id="image">
                        </div>
                       
                       
                        
                       
                       
                        <div>
                            <button type="submit" class="buttons" style="background-color: rgb(99, 153, 99); color: white; ">Enviar</button>
    
                        </div>
                        
    
                     
                    </form>
                    </div>
                </div>
            </section>
        </main>
        <%-include('../partials/footer')%>
        <script src="/js/validUser.js"></script>
   </body>
   </html>
              
    